
<div class="content">
	<% @tables.each do |table| %>
		<% unless table.id == 0 %>
		<div class='tableImage col-xs-5 col-sm-4 col-md-3 col-lg-2 col-xl-1'>
			<a href="/front/table_detail/<%=table.id%>">
				<% if table.occupied %>
					<img id='image' src="/assets/table2.png" >
				<% else %>
					<img id='image' src="/assets/table1.png" >
				<% end %>
			</a>
			<p id="text">T<%=table.table_number.to_s.rjust(2,'0')%></p>
			<p id="text2">0</p>
		</div>
		<% end %>
	<% end %>
	<div class='tableImage col-xs-5 col-sm-4 col-md-3 col-lg-2 col-xl-1'>
		<div style="width:113px; height:113px; vertical-align: center; text-align: center;">
			<a href="/add_table"><span class="glyphicon glyphicon-plus" aria-hidden="true" style="font-size:75px;"></span></a>
		</div>
	</div>
