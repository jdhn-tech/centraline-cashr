<div id="takeaway_book" class="content" style="display:none;">
	<table id='Table_Menu_Image' class='table'>
		<tr>
		<th><img id='image' src="/assets/table1.png" onclick="toggleTableDetail()"></th><th><img id='image' src="/assets/menu.png" onClick="toggleMenuSelect()"></th><th><img id='image' src="/assets/couvert.png" onClick="toggleEntrySelect()"></th><th><img id='image' src="/assets/cloche.png" onCLick="toggleDishSelect()"></th><th><img id='image' src="/assets/boisson.png" onCLick="toggleDrinkSelect()"></th><th><img id='image' src="/assets/dessert.png" onClick="toggleDessertSelect()"></th>
		</tr>
	</table>
	<div id="takeaway_book_menus" class="row">
		<table class='table'>
			<thead>
				<th style="text-align:left;"></th>
				<th style="text-align:left;">Code : Nom</th>
				<th style="text-align:left;">Liste Articles</th>
				<th style="text-align:left;">Prix</th>
			</thead>
			<tbody>
				<% @menus.each do |menu| %>
					<tr>
						<td><button type='button' onClick="addMenuToNote('<%=menu.id%>','<%=menu.code%>','<%=menu.name%>','<%=menu.price%>',this)">Ajouter</button></td>
						<td><%=menu.code%> : <%=menu.name%></td>
						<td><%= menu.get_articles.map{|a| a.name}.join(" ; ") %></td>
						<td><%= menu.price.to_f / 100 %> €</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div id="takeaway_book_entries" class="row" style="display:none;">
		<table class='table'>
			<% @articles.map{|a| a if a.category_ids.include?("4")}.compact.each do |article| %>
				<tr>
					<td><button type='button' onClick="addEntryToNote('<%=article.id%>','<%=article.code%>','<%=article.name%>','<%=article.price%>',this)">Ajouter</button></td>
					<td><%= article.code %></td>
					<td><%= article.name %></td>
					<td><%= article.price.to_f / 100 %> €</td>
				</tr>
			<% end %>
		</table>
	</div>
	<div id="takeaway_book_dishes" class="row" style="display:none;">
		<table class='table'>
			<% @articles.map{|a| a if (a.category_ids & ["5"]).any?}.compact.each do |article| %>
				<tr>
					<td><button type='button' onClick="addDishToNote('<%=article.id%>','<%=article.code%>','<%=article.name%>','<%=article.price%>',this)">Ajouter</button></td>
					<td><%= article.code %></td>
					<td><%= article.name %></td>
					<td><%= article.price.to_f / 100 %> €</td>
				</tr>
			<% end %>
		</table>
	</div>
	<div id="takeaway_book_drinks" class="row" style="display:none;">
		<table class='table'>
			<% @articles.map{|a| a if (a.category_ids & ["1","2"]).any?}.compact.each do |article| %>
				<tr>
					<td><button type='button' onClick="addDrinkToNote('<%=article.id%>','<%=article.code%>','<%=article.name%>','<%=article.price%>',this)">Ajouter</button></td>
					<td><%= article.code %></td>
					<td><%= article.name %></td>
					<td><%= article.price.to_f / 100 %> €</td>
				</tr>
			<% end %>
		</table>
	</div>
	<div id="takeaway_book_desserts" class="row" style="display:none;">
		<table class='table'>
			<% @articles.map{|a| a if (a.category_ids & ["7"]).any?}.compact.each do |article| %>
				<tr>
					<td><button type='button' onClick="addDessertToNote('<%=article.id%>','<%=article.code%>','<%=article.name%>','<%=article.price%>',this)">Ajouter</button></td>
					<td><%= article.code %></td>
					<td><%= article.name %></td>
					<td><%= article.price.to_f / 100 %> €</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>

<script>
var takeaway_detail_line = "<tr><td><button type='button' class='btn btn-default btn-lg' onclick='duplicateLineNote(this)'><span class='glyphicon glyphicon-duplicate' aria-hidden='true'></span></button></td><td><button type='button' class='btn btn-default btn-lg' onClick='removeLineNote(this)'><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button></td><td class='takeaway_note_code'>%CODE%</td><td>%NOM%</td><td class='takeaway_note_price'>%PRIX%</td><td><button type='button' class='btn btn-default btn-lg' onclick='addNotice(this)' data-toggle='modal' data-target='#modalAddNotice'><span class='glyphicon glyphicon glyphicon-plus' aria-hidden='true'></span></button>%NOTE%</td><td>%ETAT%</td></tr>";
function tableBookToggleMenus(menuDiv) {
	$("div[id^='takeaway_book_select_menu'").hide();
	$("#"+menuDiv).show();
}
function toggleMenuSelect() {
	$("#takeaway_book_menus").show();
	$("#takeaway_book_entries").hide();
	$("#takeaway_book_dishes").hide();
	$("#takeaway_book_drinks").hide();
	$("#takeaway_book_desserts").hide();
}
function toggleEntrySelect() {
	$("#takeaway_book_menus").hide();
	$("#takeaway_book_entries").show();
	$("#takeaway_book_dishes").hide();
	$("#takeaway_book_drinks").hide();
	$("#takeaway_book_desserts").hide();
}
function toggleDishSelect() {
	$("#takeaway_book_menus").hide();
	$("#takeaway_book_entries").hide();
	$("#takeaway_book_dishes").show();
	$("#takeaway_book_drinks").hide();
	$("#takeaway_book_desserts").hide();
}
function toggleDrinkSelect() {
	$("#takeaway_book_menus").hide();
	$("#takeaway_book_entries").hide();
	$("#takeaway_book_dishes").hide();
	$("#takeaway_book_drinks").show();
	$("#takeaway_book_desserts").hide();
}
function toggleDessertSelect() {
	$("#takeaway_book_menus").hide();
	$("#takeaway_book_entries").hide();
	$("#takeaway_book_dishes").hide();
	$("#takeaway_book_drinks").hide();
	$("#takeaway_book_desserts").show();
}

function addMenuToNote(id,code,name,price,e) {
	var line = takeaway_detail_line.replace('%CODE%', code);
	line = line.replace('%NOM%', name);
	line = line.replace('%PRIX%', price / 100 + ' €');
	line = line.replace('%NOTE%', '');
	line = line.replace('%ETAT%', '');
	$("#takeaway_detail_note").append(line);
	updateSum();
	toggleTableDetail();
	updateNote();
}
