			<th colspan="7" id="table_note_sum">Somme = 0 €</th>
		</tr>
	</tfoot>
	</table>
	
	<table id='Table_Bottom' class='Table_Bottom'>
		<tr style="height:50px;">
			<td><a href="/front/edition_liste">Edition liste</a></td>
			<td><a href="/front/edition_client">Edition Client</a></td>
			<td><a class="btn" onclick="cashIn()">Encaisser</a></td>
			<td><a href="/front/annulation">Annulation</a></td>
		</tr>
	</table>	
</div>

