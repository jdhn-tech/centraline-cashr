						<select>
						  <option value="ES">ES</option>
						  <option value="CB" selected="selected">CB</option>
						  <option value="TR">TR</option>
						  <option value="CH">CH</option>
						  <option value="AUTRES">AUTRES</option>
						</select>

					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<th>Total</th><th>25€</th>
				</tr>
				<tr>
					<th>Paiement</th><th>8€</th>
				</tr>
				<tr>
					<th>Reste/à rendre</th><th>17€</th>
				</tr>
			</tfoot>
		</table>
		<button>EDITION FACTURE</button>
	</div>
</div>
<script>
function totalSelection(){
	var sum = 0;
	$(".selection").each(function(i,obj) {
		sum += parseFloat($(obj).text());
	});
	$("#remaining_selection").text(sum+" €");

}
$(document).ready(function(){
	totalSelection();
});

