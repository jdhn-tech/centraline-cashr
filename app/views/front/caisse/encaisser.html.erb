						<td><%=menu.code%></td>
						<td><%=menu.name%></td>
						<td class="selection"><%=menu.price.to_f / 100%> €</td>
					</tr>
				<%end%>
			<tr>
				<th colspan="2">Total</th><th><%=@note.value.to_f / 100%> €</th>
			</tr>
			<tr>
				<th colspan="2">Restant</th><th id="remaining_selection">100€</th>
			</tr>
			</tbody>
		</table>
